
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h3><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h3>
    <ul>
      <% @book.errors.full_massages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book,) do |f| %>

  <h3>Title</h3>
  <%= f.text_field :title, class: "field" %>

  <h3>Body</h3>
  <%= f.text_area :body, class: "field" %>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book) %>
